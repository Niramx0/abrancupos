version: '3.8'
services:
  db:
    image: mysql:8.0 # Or any other desired version like mysql:5.7
    container_name: mysql_db
    environment:
      MYSQL_ROOT_PASSWORD: N1r4m50_1 # Replace with a strong password
      MYSQL_DATABASE:  # Optional: Create a database on startup
      MYSQL_USER: root # Optional: Create a user on startup
      MYSQL_PASSWORD: N1r4m50_1 # Optional: Set password for the user
    ports:
      - "3306:3306" # Maps host port 3306 to container port 3306
    volumes:
      - db_data:/var/lib/mysql # Persistent storage for database data
      # - ./init_scripts:/docker-entrypoint-initdb.d # Optional: For custom SQL scripts
    restart: unless-stopped # Automatically restart the container unless manually stopped

volumes:
  db_data: # Define the named volume for persistent data
